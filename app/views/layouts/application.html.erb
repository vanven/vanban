<!DOCTYPE html>
<html>
<head>
  <title>Vanban</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <div class="header">
  Signed in as <%= current_user.name %>!
  <%= link_to "Sign out", signout_path %>&nbsp;
  <a class="logo"><span>van</span>BAN</a>
  </div>
<% else %>
  <div class="header">
  <%= link_to "Sign in with Google", "/auth/google_oauth2" %>&nbsp;
  <a class="logo"><span>van</span>BAN</a>
  </div>
<% end %>

<% if flash[:notice] %>
    <div class="message notice"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:error] %>
    <div class="message error"><%= flash[:error] %></div>
  <% end %>

<%= yield %>

<div class="footer">
  <span>
    <a href="/privacy">Privacy</a>
    <a href="/terms">Terms</a>
  </span>
</div>

<%= javascript_include_tag "application", "data-turbolinks-track" => true %>

</body>
</html>
